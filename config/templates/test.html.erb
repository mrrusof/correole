<html>
  <body>
    <h1><%= title %></h1>
    <h2>Items</h2>
    <ul>
<% for item in unsent_items %>
      <li>
<% if item.pub_date -%>
        <i><%= item.pub_date.to_date %></i>
<% end -%>
        <h3>
          <a href="<%= item.link %>"><%= item.title %></a>
        </h3>
        <p><%= item.description %></p>
      </li>
<% end %>
    </ul>

    <a href="<%= unsubscribe_uri %>">Unsubscribe here.</a>
  </body>
</html>
